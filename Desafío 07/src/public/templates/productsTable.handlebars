
{{#if products}}
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>   
            <th scope="col">Nombre</th>
            <th scope="col">CÃ³digo</th>
            <th scope="col">Precio</th>
            <th scope="col">Stock</th>
            <th scope="col">Foto Url</th>
            <th scope="col">Borrar</th>
            <th scope="col">Modificar</th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}        
        <tr style="max-width: 3.5rem;">
            <th scope="row">{{this.id}}</th>
            <td>{{this.title}}</td>
            <td>{{this.code}}</td>
            <td>${{this.price}}</td>
            <td>{{this.stock}}</td>            
            <td>
                <img src="{{this.thumbnail}}" style="max-width: 3.5rem;height:4rem">            
            </td>
            <td>
                <button class="btn btn-danger" onclick ="deleteProd({{this.id}})">Borrar</button>
            </td>
            <td>
                <button class="btn btn-primary" onclick='modifyProd({{this.id}})'>Modificar</button>
            </td>
        </tr>    
        {{/each}}
    </tbody>
</table>
{{else}}
  <h2 class="text-center text-danger mt-5">No hay productos cargados</h2>
{{/if}}