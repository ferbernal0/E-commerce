
{{#if products}}
<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Title</th>
      <th scope="col">Price</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr style="max-width: 3.5rem;">
        <th scope="row">{{this.id}}</th>
        <td>{{this.title}}</td>
        <td>${{this.price}}</td>
        <td>
            <img src="{{this.thumbnail}}" style="max-width: 3.5rem;height:4rem">            
        </td>
    </tr>    
    {{/each}}
  </tbody>
</table>
{{else}}
  <h2 class="text-center text-danger mt-5">No hay productos cargados</h2>
{{/if}}